@using DeltaQrCode.ModelsDto
@using Microsoft.AspNetCore.Razor.TagHelpers
@model DeltaQrCode.ViewModels.Appointments.ConfirmVM

<div class="modal-body">
    <div class="btn btn-squared-default-plain btn-primary" style="margin-right:20px;" id="confirmButton" type="button" data-value="@Model.Id" data-confirm="@Model.Confirm">
        @if (Model.Confirm)
        {
            <br /><i class="fas fa-check-circle fa-4x"></i> <br />
        }
        else
        {
            <br /><i class="fas fa-times-circle fa-4x"></i> <br />
        }

        @(!Model.Confirm ? "Anuleaza programarea" : "Confirma")
    </div>
    <div class="btn btn-squared-default-plain btn-success" style="margin-right:20px;" id="editButton" type="button" data-value="@Model.Id"><br /><i class="fas fa-pen-square fa-4x"></i> <br />Editeaza</div>
    <div class="btn btn-squared-default-plain btn-danger" id="deleteButton" type="button" data-value="@Model.Id"><br /><i class="fas fa-trash-alt fa-4x"></i> <br />  Delete </div>

</div>