@using DeltaQrCode.HelpersAndExtensions
@using System.Security.Claims
@model DeltaQrCode.ViewModels.HotelListViewModel


<div class="row justify-content-center">
    <div class="col-auto">
        <table class=" editabletable table table table-responsive table-sm table-responsive-md table-responsive-sm table-bordered table-hover">
            <thead>
                <tr class="text-center">
                    <th scope="col">Uzura</th>
                    <th scope="col">Diametru</th>
                    <th scope="col">Latime</th>
                    <th scope="col">Inaltime</th>
                    <th scope="col">DOT</th>
                    <th scope="col">Marca</th>
                    <th scope="col">TipSezon</th>
                    <th scope="col">Status Curent</th>
                    <th scope="col">Pozitie</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.anvList)
                {
                    <tr class="text-center">
                       
                        <td contenteditable="true">@item.Uzura</td>
                        <td contenteditable="true">@item.Diametru</td>
                        <td contenteditable="true">@item.Latime</td>
                        <td contenteditable="true">@item.Inaltime</td>
                        <td contenteditable="true">@item.Dot</td>
                        <td contenteditable="true">@item.Marca</td>
                        <td contenteditable="true">@item.TipSezon</td>
                        <td contenteditable="true">@item.StatusCurent</td>
                        <td contenteditable="true">@item.PozitieInRaft</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div hidden="hidden" class="hasPrevEdit" data-value="@Model.anvList.HasPreviousPage.ToString().ToLower()"></div>
<div hidden="hidden" class="hasNextEdit" data-value="@Model.anvList.HasNextPage.ToString().ToLower()"></div>


<div class="text-center">
    <button data-pageNumber="@(Model.anvList.PageIndex - 1)"
            class=" customPagination buttonPrevEdit btn btn-default">
        Previous
    </button>
    <button data-pageNumber="@(Model.anvList.PageIndex + 1)"
            class=" customPagination buttonNextEdit btn btn-default">
        Next
    </button>
</div>

