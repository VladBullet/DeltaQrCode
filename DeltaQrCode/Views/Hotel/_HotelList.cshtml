
@model DeltaQrCode.ViewModels.HotelListViewModel

<table class="table table-bordered" style="width:100%;border:1px solid black;">
    <thead>
        <tr>
            <th scope="col">Actiune</th>
            <th scope="col">Nr. Auto</th>
            <th scope="col">Client</th>
            <th scope="col">Marca</th>
            <th scope="col">Nr.Buc</th>
            <th scope="col">Dimensiuni</th>
            <th scope="col">Uzura</th>
            <th scope="col">Tip</th>
            <th scope="col">Evaluare</th>
            <th scope="col">Rand</th>
            <th scope="col">Poz</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model.List)
        {
            <tr>
                <td>
                    <a href="https://www.google.com" class="button"><i class="fas fa-info-circle"></i></a>
                    <a href="https://www.google.com" class="button"><i class="far fa-edit"></i></a>
                    <a href="https://www.google.com" class="button"><i class="fas fa-trash-alt"></i></a>
                </td>
                <td>@item.NrAuto</td>
                <td>@item.Client</td>
                <td>@item.Marca</td>
                <td>@item.NrBucati</td>
                <td>@item.Dimensiuni</td>
                <td>@item.Uzura</td>
                <td>@item.Tip</td>
                <td>@item.Evaluare</td>
                <td>@item.Rand</td>
                <td>@item.Poz</td>
            </tr>
        }
    </tbody>
</table>
<input id="currentPage" type="hidden" value="@Model.CurrentPage" hidden />
<div class="justify-content-center text-center">
    <ul class="pagination text-center justify-content-center ">
        @for (int i = 0; i < Model.TotalPages; i++)
        {
            <li class="button page-item CustomPagination @(Model.CurrentPage == @i + 1 ? " active " : string.Empty )" data-value="@(i + 1)"><div class="page-link">@(i + 1)</div></li>
        }
    </ul>
</div>
